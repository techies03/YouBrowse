@* Views/Home/Index.cshtml *@
@{
    ViewData["Title"] = "YouBrowse - Discover YouTube Videos";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<!-- In your Home/Index.cshtml -->
<div class="container mt-4">
    <div class="container-fluid bg-dark text-white text-center py-2 d-flex align-items-center justify-content-center home-index" style="min-height: 55vh;">
        <div class="container">
            <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-film big-film-icon mb-4" viewBox="0 0 16 16">
                <path d="M0 1a1 1 0 0 1 1-1h14a1 1 0 0 1 1 1v14a1 1 0 0 1-1 1H1a1 1 0 0 1-1-1zm4 0v6h8V1zm8 8H4v6h8zM1 1v2h2V1zm2 3H1v2h2zM1 7v2h2V7zm2 3H1v2h2zm-2 3v2h2v-2zM15 1h-2v2h2zm-2 3v2h2V4zm2 3h-2v2h2zm-2 3v2h2v-2zm2 3h-2v2h2z" />
            </svg>
            <h1 class="display-4 fw-bold">Welcome to YouBrowse</h1>
            <p class="lead">Search and discover YouTube videos instantly</p>

            <!-- Search Form -->
            <form method="get" action="@Url.Action("Index", "Search")" class="mt-4">
                <div class="input-group input-group-lg w-50 mx-auto">
                    <input type="text" name="query" class="form-control rounded-start-pill" placeholder="Search YouTube..." required>
                    <button type="submit" class="btn btn-success rounded-end-pill search-btn">Search</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Features Section -->
    <div class="container text-center my-0 home-index">
        <div class="row">
            <div class="col-md-4">
                <i class="bi bi-search display-3 text-danger"></i>
                <h3 class="mt-3">Quick Search</h3>
                <p>Find YouTube videos instantly using our fast search.</p>
            </div>
            <div class="col-md-4">
                <i class="bi bi-play-btn display-3 text-danger"></i>
                <h3 class="mt-3">Watch Instantly</h3>
                <p>Play videos directly within our app using a modal player.</p>
            </div>
            <div class="col-md-4">
                <i class="bi bi-youtube display-3 text-danger"></i>
                <h3 class="mt-3">Seamless Experience</h3>
                <p>Enjoy a clean and intuitive interface for browsing videos.</p>
            </div>
        </div>
    </div>
</div>

<style>
    .big-film-icon {
        width: 15rem;
        height: 15rem;
    }

</style>